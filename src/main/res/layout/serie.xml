<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/valoracionLista"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imagenPortadaLista"
        android:layout_width="149dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nombreSerieLista"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/valoracionLista"
        android:layout_alignTop="@+id/imagenPortadaLista" />

    <TextView
        android:id="@+id/numeroCapituloLista"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/valoracionLista"
        android:layout_below="@+id/numeroTemporadaLista" />

    <TextView
        android:id="@+id/numeroTemporadaLista"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/valoracionLista"
        android:layout_below="@+id/nombreSerieLista" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreSerieLista"
        android:layout_toStartOf="@+id/valoracionLista"
        android:text="Temporada" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/valoracionLista"
        android:layout_toStartOf="@+id/valoracionLista"
        android:text="Capitulo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numeroCapituloLista"
        android:layout_toEndOf="@+id/imagenPortadaLista"
        android:text="Valoracion" />

</RelativeLayout>